{
	"name": "ipfs-user-node",
	"version": "1.0.0",
	"description": "An console implementation of IPFS user node to manage files and Hello.app services",
	"main": "dist/index.js",
	"bin": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "ts-node src/index.ts",
		"pkg": "pkg . --compress GZip",
		"lint": "eslint ."
	},
	"keywords": [],
	"author": "hello.app",
	"license": "MIT",
	"dependencies": {
		"@types/adm-zip": "^0.5.5",
		"@types/cors": "^2.8.17",
		"@types/debug": "^4.1.12",
		"@types/express": "^4.17.21",
		"@types/morgan": "^1.9.9",
		"adm-zip": "^0.5.14",
		"axios": "^1.7.2",
		"cors": "^2.8.5",
		"debug": "^4.3.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"morgan": "^1.10.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.6.0",
		"eslint": "9.x",
		"globals": "^15.8.0",
		"pkg": "^5.8.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.3",
		"typescript-eslint": "^7.15.0"
	},
	"pkg": {
		"scripts": "dist/**/*.js",
		"assets": [
			"assets/resources/**/*",
			"node_modules/axios/**/*",
			".env"
		],
		"targets": [
			"latest-linux-x64",
			"latest-macos-x64",
			"latest-win-x64"
		],
		"outputPath": "bin"
	},
	"releaseBody": "First release"
}
